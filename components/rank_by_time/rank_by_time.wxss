.container {
	width: 700rpx;
	background-color: #FFFFFF;
	border-radius: 15rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 10rpx 10rpx;
	box-shadow: 8rpx 0rpx 16rpx rgba(0, 0, 0, 0.12);
}

.rank_list_container {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	margin-top: 10rpx;
	margin-bottom: 10rpx;
}

.info_container {
	display: flex;
	flex-direction: row;
	align-items: center;
}

.avatar {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}

.name {
	font-size: 25rpx;
	margin-left: 30rpx;
}

.dateTime {
	font-size: 20rpx;
	text-align: right;
	margin-right: 10rpx;
}