.container {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}

.page {
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
}

.button_container {
	width: 100%;
	display: flex;
	flex-direction: row-reverse;
}

.rank_button {
	width: fit-content;
	height: fit-content;
	padding: 10rpx 20rpx;
	background-color: #E8E8F4;
	border-radius: 15rpx;
	margin-right: 10rpx;
	margin-top: 10rpx;
	font-size: 25rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

.down_icon {
	width: 25rpx;
}

.title {
	font-size: 70rpx;
	margin-left: 30rpx;
	margin-top: 10rpx;
}

.rank_list_container {
	width: 100%;
	display: flex;
	justify-content: center;
	margin-top: 10rpx;
}